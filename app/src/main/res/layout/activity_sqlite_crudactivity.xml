<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SQLiteCRUDactivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editTextTarea"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="25dp"
            android:hint="@string/ingrese_una_tarea"
            tools:ignore="SpUsage,TextFields"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:backgroundTint="@color/material_dynamic_neutral_variant70"
            android:text="@string/agregar_tarea"/>

        <ListView
            android:id="@+id/listViewTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="none"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>